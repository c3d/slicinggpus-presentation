theme_background "RedHat", "main" ->
// ----------------------------------------------------------------------------
//   Draw the triangles in the background
// ----------------------------------------------------------------------------
    clear_color "#A21400"
    background -100,
        rotate_z 45
        translate_y 1000
        color redhat_red1
        rectangle 1800, 500
    background -50,
        rotate_z 45
        translate_y 1000
        color redhat_red2
        rectangle 1800, 300
    background -20,
        rotate_z 45
        translate_y 1000
        color redhat_red3
        rectangle 1800, 230
        translate_y -2000
        rectangle 1800, 230
    background -50,
        translate 570, -570, 0
        frame_texture 80, 80,
            line_color "white"
            color "transparent"
            line_width 2
            for I in 0..8 loop
                rectangle 10 * I, 10 * I
        texture_transform
            translate -seconds_time * 0.2 mod 1, 0.0, 0
            scale 20 + 10 * sin (0.1 * seconds_time)
        texture_wrap true, true
        color redhat_red2
        redhat_triangle 800, 860
        redhat_triangle A, B ->
            path
                move_to -B, -B
                line_to  B,  B
                line_to  B,  A
                line_to -A, -B
                line_to -B, -B

    contents -10,
        color "white"
        image -580, 250, 100%, 100%, "RedHat-WhiteText.png"


theme_background "RedHat", "section" ->
// ----------------------------------------------------------------------------
//   Same as section
// ----------------------------------------------------------------------------
    theme_background "RedHat", "main"


theme_background "RedHat", Master ->
// ----------------------------------------------------------------------------
//   Draw the triangles in the background
// ----------------------------------------------------------------------------
    clear_color "white"
    time
    locally
        translate_z -200
        frame_texture 80, 80,
            line_color "white"
            color "transparent"
            line_width 2
            for I in 0..8 loop
                rectangle 10 * I, 10 * I
        texture_transform
            translate -time * 0.003 mod 1, 0.0, 0
            scale 20 + 10 * sin (0.001 * time)
        texture_wrap true, true
        color "lightgray", 60% // 30
        locally
            translate window_width / 2 - 80, -window_height / 2 + 80, 0
            redhat_triangle 800, 860
        locally
            translate -window_width / 2 + 80, window_height / 2 - 80, 0
            redhat_triangle -800, -860
        redhat_triangle A, B ->
            path
                move_to -B, -B
                line_to  B,  B
                line_to  B,  A
                line_to -A, -B
                line_to -B, -B

    locally
        translate 0, bottom_offset + 20, -100
        color "lightgray"
        rectangle bottom_width, 2
    locally
        translate bottom_width/2 - 60, bottom_offset, -50
        color "white"
        image 0, 0, 100%, 100%, "RedHat-BlackText.png"
    locally
        translate 0, bottom_offset, -50
        vertical_align 0.5
        font_size 30 * min(0.5, min(window_width / slide_width, window_height / slide_height))
        text_box 0, 0, bottom_width - 30, 50,
            align 0%
            text "Page " & page_number //  & "/" & page_count
        text_box 0, 0, bottom_width - 2.5 * text_width("Page 99/99"), 50,
            align 0%
            text PresentationTitle
        text_box 0, 0, bottom_width - 250, 50,
            align 100%
            text month & "/" & day & "/" & year & " - " & hours & ":" & zero minutes & ":" & zero seconds
zero N -> if N < 10 then "0" & N else N
bottom_offset -> (-window_height / 2 + 20)
bottom_width -> window_width - 100



